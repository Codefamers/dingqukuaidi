<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android" >

    <selector>
        <item android:state_pressed="true">
            <shape>
                <gradient
                    android:angle="0.0"
                    android:endColor="#707070"
                    android:startColor="#707070" />

                <corners android:radius="5dp" />

                <stroke
                    android:width="1.0px"
                    android:color="#707070" />
            </shape>
        </item>
        <item android:state_enabled="false">
            <shape>
                <gradient
                    android:angle="0.0"
                    android:endColor="@color/text_grey"
                    android:startColor="@color/text_grey" />

                <corners android:radius="5dp" />

                <stroke
                    android:width="1.0px"
                    android:color="@color/text_grey" />
            </shape>
        </item>
        <item>
            <shape>
                <gradient
                    android:angle="0.0"
                    android:endColor="#333333"
                    android:startColor="#333333" />

                <corners android:radius="5dp" />

                <stroke
                    android:width="1.0px"
                    android:color="#333333" />
            </shape>
        </item>
    </selector>

</inset>