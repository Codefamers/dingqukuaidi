<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color">

    <ScrollView
        android:layout_width="match_parent"
        android:scrollbars="none"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_loop_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.appheader.DingQuPostman.ui.main.view.SlideShowView
                    android:id="@+id/slideshowView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y96"
                    android:layout_centerHorizontal="true" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y4"
                android:src="@drawable/grey_cut_line" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y8"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginRight="@dimen/x8"
                android:layout_marginTop="@dimen/y8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y10"
                    android:layout_gravity="center"
                    android:background="@drawable/alpha_cut_line"
                    android:paddingRight="@dimen/x4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/x4"
                    android:text="用电业务"
                    android:textColor="@color/corner_grey"
                    android:textSize="14sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_use_electricity_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y4"
                android:src="@drawable/grey_cut_line"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x8"
                android:layout_marginBottom="@dimen/y8"
                android:layout_marginTop="@dimen/y8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y10"
                    android:layout_gravity="center"
                    android:background="@drawable/alpha_cut_line_one"
                    android:paddingRight="@dimen/x4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/x4"
                    android:text="特色业务"
                    android:textColor="@color/corner_grey"
                    android:textSize="14sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_page_two" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y4"
                android:src="@drawable/grey_cut_line"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x8"
                android:layout_marginBottom="@dimen/y8"
                android:layout_marginTop="@dimen/y8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y10"
                    android:layout_gravity="center"
                    android:background="@drawable/alpha_cut_line_two"
                    android:paddingRight="@dimen/x4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/x4"
                    android:text="服务导航"
                    android:textColor="@color/corner_grey"
                    android:textSize="14sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_server_navigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y4"
                android:src="@drawable/grey_cut_line"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x8"
                android:layout_marginBottom="@dimen/y8"
                android:layout_marginTop="@dimen/y8"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_small_title"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y10"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x4"
                    android:background="@drawable/alpha_cut_line_two"
                    android:paddingRight="@dimen/x4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_toRightOf="@id/img_small_title"
                    android:text="在线体验"
                    android:textColor="@color/corner_grey"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txt_more_use"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y11"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:drawableRight="@mipmap/ico_home_arrow_24"
                    android:gravity="center"
                    android:text="更多体验"
                    android:textColor="@color/text_grey"
                    android:textSize="12sp" />

            </RelativeLayout>

            <com.appheader.DingQuPostman.ui.main.view.SlideShowView
                android:id="@+id/slideshowView_online_use"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y48"
                android:layout_centerHorizontal="true" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/y4"
                android:src="@drawable/grey_cut_line"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/x8"
                android:layout_marginBottom="@dimen/y8"
                android:layout_marginTop="@dimen/y8"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y10"
                    android:layout_gravity="center"
                    android:background="@drawable/alpha_cut_line_two"
                    android:paddingRight="@dimen/x4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/x4"
                    android:text="综合查询"
                    android:textColor="@color/corner_grey"
                    android:textSize="14sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rec_power_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff" />
        </LinearLayout>


    </ScrollView>

</RelativeLayout>