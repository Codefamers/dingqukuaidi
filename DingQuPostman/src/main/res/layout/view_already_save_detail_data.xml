<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:fadingEdge="none"
        card_view:cardBackgroundColor="@android:color/white"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_date_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y4"
                android:layout_marginTop="@dimen/y4"
                android:src="@drawable/line_gray_vertical" />

            <RelativeLayout
                android:id="@+id/ll_detail_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y4"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginRight="@dimen/x8"
                android:layout_marginTop="@dimen/y4"
                android:layout_toRightOf="@id/img_date_icon">

                <ImageView
                    android:id="@+id/img_contact_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/y4"
                    android:layout_marginTop="@dimen/y4"
                    android:src="@mipmap/ico_user" />

                <TextView
                    android:id="@+id/txt_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/img_contact_icon"
                    android:layout_marginBottom="@dimen/y8"
                    android:layout_marginRight="@dimen/x8"
                    android:layout_toRightOf="@id/img_contact_icon"
                    android:text="15510974083"
                    android:textColor="#000"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/iv_call_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/txt_telephone"
                    android:layout_alignTop="@id/txt_telephone"/>

                <TextView
                    android:id="@+id/txt_express_id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/img_contact_icon"
                    android:layout_below="@id/txt_telephone"
                    android:text="快递单号  "
                    android:layout_marginBottom="@dimen/y8"
                    android:textColor="@color/text_grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_express_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/txt_express_id_title"
                    android:layout_toRightOf="@id/txt_express_id_title"
                    android:text="10032874973"
                    android:textColor="@color/text_grey"
                    android:textSize="12sp" />

            </RelativeLayout>
            <View
                android:layout_below="@id/ll_detail_info"
                android:layout_width="wrap_content"
                android:background="@drawable/bg_repeat"
                android:layout_height="@dimen/y2"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/y8"
                android:layout_below="@id/ll_detail_info"
                android:background="@mipmap/bg_list_state">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="fitCenter"
                    android:paddingTop="@dimen/y8"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/ico_content_position" />
                <TextView
                    android:id="@+id/txt_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/y8"
                    android:layout_gravity="center"
                    android:text="团结路津工超市"
                    android:textColor="@color/text_grey"
                    android:textSize="12sp" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>








