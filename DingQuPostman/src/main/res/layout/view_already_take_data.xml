<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/cv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/bg_rec_item">


        <RelativeLayout
            android:id="@+id/ll_detail_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y4"
            android:layout_marginRight="@dimen/x8"
            android:layout_marginTop="@dimen/y4">

            <ImageView
                android:id="@+id/img_date_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/txt_express_id_title"
                android:layout_alignTop="@+id/img_contact_icon"
                android:src="@drawable/line_gray_vertical" />

            <ImageView
                android:id="@+id/img_contact_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/y4"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginTop="@dimen/y4"
                android:src="@mipmap/ico_user" />

            <TextView
                android:id="@+id/txt_telephone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/img_contact_icon"
                android:layout_marginBottom="@dimen/y8"
                android:layout_marginRight="@dimen/x8"
                android:layout_toRightOf="@id/img_contact_icon"
                android:text="15510974083"
                android:textColor="#000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_express_id_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/img_contact_icon"
                android:layout_below="@id/txt_telephone"
                android:layout_marginBottom="@dimen/y8"
                android:text="快递单号  "
                android:textColor="@color/text_grey"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/txt_express_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/txt_express_id_title"
                android:layout_toRightOf="@id/txt_express_id_title"
                android:text="10032874973"
                android:textColor="@color/text_grey"
                android:textSize="12sp" />

        </RelativeLayout>

        <View
            android:layout_width="wrap_content"
            android:layout_height="@dimen/y2"
            android:layout_below="@id/ll_detail_info"
            android:background="@drawable/bg_repeat" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll_detail_info"
            android:background="@mipmap/bg_list_state"
            android:paddingBottom="@dimen/y8">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x8"
                android:paddingTop="@dimen/y8"
                android:scaleType="fitCenter"
                android:src="@mipmap/ico_content_complete" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingTop="@dimen/y8"
                android:text="已完成"
                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/txt_complete_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingLeft="@dimen/x4"
                android:paddingTop="@dimen/y8"
                android:text="2016-5-16 20:36"
                android:textColor="@color/text_grey"
                android:textSize="12sp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
