<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/cv_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y50"
        android:layout_margin="8dp"
        android:background="@drawable/bg_rec_item">


        <RelativeLayout
            android:id="@+id/ll_detail_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y4"
            android:layout_marginTop="@dimen/y4">
            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_date_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/txt_express_id_title"
                    android:layout_alignParentLeft="true"
                    android:layout_alignTop="@+id/img_contact_icon"
                    android:background="@drawable/line_gray_vertical" />

                <ImageView
                    android:id="@+id/img_contact_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/y16"
                    android:layout_marginBottom="@dimen/y4"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_marginTop="@dimen/y4"
                    android:src="@mipmap/ico_user" />

                <TextView
                    android:id="@+id/txt_telephone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignTop="@id/img_contact_icon"
                    android:layout_alignBottom="@id/img_contact_icon"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_marginRight="@dimen/x8"
                    android:layout_toRightOf="@id/img_contact_icon"
                    android:text="15510974083"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/iv_call_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/txt_telephone"
                    android:layout_alignTop="@id/txt_telephone"
                    android:layout_toRightOf="@id/txt_telephone"
                     />

                <TextView
                    android:id="@+id/txt_express_id_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/img_contact_icon"
                    android:layout_below="@id/txt_telephone"
                    android:text="快递单号  "
                    android:layout_marginRight="@dimen/y4"
                    android:textColor="@color/text_grey"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/txt_post_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/y4"

                    android:layout_alignBottom="@id/txt_express_id_title"
                    android:layout_toRightOf="@id/txt_express_id_title"
                    android:text="李明"
                    android:textColor="@color/text_grey"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/txt_express_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/txt_express_id_title"
                    android:layout_toRightOf="@id/txt_post_man"
                    android:text="10032874973"
                    android:textColor="@color/text_grey"
                    android:textSize="12sp" />
                <Button
                    android:id="@+id/img_delete_express"
                    android:layout_width="@dimen/x32"
                    android:layout_marginRight="@dimen/x32"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="#929292"
                    android:layout_alignTop="@id/txt_express_id"
                    android:layout_alignBottom="@id/txt_express_id"
                    android:text="9:30"
                    android:textSize="12sp"
                    android:background="@drawable/bg_search_time_item" />

            </RelativeLayout>




        </RelativeLayout>



    </RelativeLayout>

</LinearLayout>
