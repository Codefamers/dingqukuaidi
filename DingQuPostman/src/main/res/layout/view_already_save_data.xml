<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        card_view:cardBackgroundColor="@android:color/white"
        android:fadingEdge="none"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x8"
            android:layout_marginRight="@dimen/x8"
            android:paddingTop="@dimen/y4"
            android:paddingBottom="@dimen/y8"
            android:layout_height="match_parent">
          <ImageView
              android:id="@+id/img_date_icon"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/y28"
              android:layout_centerVertical="true"
              android:src="@mipmap/ico_day"/>
            <RelativeLayout
                android:id="@+id/ll_detail_info"
                android:layout_toRightOf="@id/img_date_icon"
                android:layout_width="wrap_content"
                android:layout_alignTop="@id/img_date_icon"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/text_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_marginRight="@dimen/x8"
                    android:layout_marginBottom="@dimen/y4"
                    android:textColor="#000"
                    android:text="今天"/>
                <TextView
                    android:id="@+id/text_detail_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_grey"
                    android:layout_toRightOf="@id/text_date"
                    android:layout_alignBottom="@id/text_date"
                    android:textSize="12sp"/>
                <TextView
                    android:id="@+id/txt_express_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="共存件100件"
                    android:layout_alignLeft="@id/text_date"
                    android:textSize="12sp"
                    android:textColor="@color/text_grey"
                    android:layout_below="@id/text_date"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x8"
                android:orientation="horizontal"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="花费"
                    android:textSize="12sp"
                    android:textColor="@color/text_grey" />
                <TextView
                    android:id="@+id/txt_consume_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥100"
                    android:textSize="12sp"
                    android:textColor="@color/red" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="元"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:drawableRight="@mipmap/ic_action_next_item"
                    android:textColor="@color/text_grey" />

            </LinearLayout>
        </RelativeLayout>
        </android.support.v7.widget.CardView>

</LinearLayout>