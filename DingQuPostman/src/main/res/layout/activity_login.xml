    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/x24"
        android:layout_marginRight="@dimen/x24"
        android:background="#49867C"
        android:layout_below="@id/iv_logo"
        android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_user_name"
                android:layout_marginTop="@dimen/y16"
                android:layout_marginLeft="@dimen/x24"
                android:layout_marginRight="@dimen/x24"
                android:layout_marginBottom="@dimen/y16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:background="@drawable/et_telephone_bg"
                android:hint="请输入手机号"
                android:textCursorDrawable="@null"
                android:drawablePadding="@dimen/x8"
                android:gravity="center|left"
                android:drawableLeft="@mipmap/ic_user_login"
                android:textColor="#fff"
                android:textColorHint="#7FAEA6" />
        <EditText
            android:id="@+id/et_user_password"
            android:layout_below="@+id/et_user_name"
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:layout_marginBottom="@dimen/y32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:background="@drawable/et_telephone_bg"
            android:hint="请输入密码"
            android:textCursorDrawable="@null"
            android:inputType="phone"
            android:textColor="#fff"
            android:drawablePadding="@dimen/x8"
            android:gravity="center|left"
            android:drawableLeft="@mipmap/ic_password_login"
            android:textColorHint="#7FAEA6" />
        <Button
            android:layout_marginLeft="@dimen/x24"
            android:layout_marginRight="@dimen/x24"
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/y16"
            android:layout_below="@id/et_user_password"
            android:background="@drawable/btn_login_bg"
            android:textSize="16sp"
            android:gravity="center_horizontal|center_vertical"
            android:text="登录"
            android:textColor="#fff" />
        <TextView
            android:id="@+id/txt_forget_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码"
            android:background="@null"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:drawableLeft="@drawable/cut_line_vertical"
            android:drawablePadding="@dimen/x4"
            android:layout_marginLeft="@dimen/x8"
            android:layout_alignRight="@id/btn_login"
            android:layout_marginBottom="@dimen/y8"
            android:layout_below="@id/btn_login"/>
        <TextView
            android:id="@+id/txt_register_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册新账号"
            android:layout_toLeftOf="@+id/txt_forget_password"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:layout_marginBottom="@dimen/y8"
            android:layout_below="@id/btn_login"/>
    </RelativeLayout>
